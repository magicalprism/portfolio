<script>
document.addEventListener("DOMContentLoaded", () => {
  function updateDynamicContent() {
    // Get the selected industry and problems
    const industryInput = document.querySelector('input[name="industry"]:checked');
    const problemInputs = document.querySelectorAll('input[name="problem"]:checked');

    const industry = industryInput ? industryInput.value : null;
    const problems = Array.from(problemInputs).map(input => input.value);

    // Hide all dynamic sections by default
    const allDynamicSections = document.querySelectorAll(".dynamic-section");
    const allDynamicRows = document.querySelectorAll(".dynamic-row");

    allDynamicRows.forEach(row => {
      const dynamicSections = row.querySelectorAll(".dynamic-section");
      let showRow = false;

      dynamicSections.forEach(section => {
        const sectionIndustry = section.getAttribute("data-industry");
        const sectionProblem = section.getAttribute("data-problem");

        // Check if the section should be visible
        if (
          (!sectionIndustry || sectionIndustry === industry) &&
          (!sectionProblem || problems.includes(sectionProblem))
        ) {
          section.style.display = "inline";
          showRow = true;
        } else {
          section.style.display = "none";
        }
      });

      // Hide or show the entire row
      row.style.display = showRow ? "block" : "none";
    });
  }

  // Attach event listeners
  const industryInputs = document.querySelectorAll('input[name="industry"]');
  const problemInputs = document.querySelectorAll('input[name="problem"]');

  industryInputs.forEach(input => input.addEventListener("change", updateDynamicContent));
  problemInputs.forEach(input => input.addEventListener("change", updateDynamicContent));

  // Initial run to set visibility
  updateDynamicContent();
});

</script>
